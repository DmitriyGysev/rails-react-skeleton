%h2 Sign in
.form-group
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|


    .field
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, class:"form-control m-b-r"

    .field
      = f.label :password
      %br
      = f.password_field :password, autocomplete: "off", class:"form-control m-b-r"

    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me

    .actions
      = f.submit "Log in", class:"btn btn-success m-t-l"

  = render "devise/shared/links"

